<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
<%- include('../partials/header') %>
<%- include('../partials/flash_message') %>
<section class="text-gray-700 body-font">
    <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
        <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
            <div class="hidden md:flex flex-col md:flex-row md:ml-auto mt-3 md:mt-0" id="navbar-collapse">
                <a href="<%= dir %>/users/change-username" class="p-2 lg:px-4 bg-indigo-600 text-white text-center hover:bg-white hover:text-indigo-600 transition-colors duration-300 mt-1 md:mt-0 md:ml-1">CHANGE USERNAME</a>
                <a href="<%= dir %>/users/change-password" class="p-2 lg:px-4 bg-indigo-600 text-white text-center hover:bg-white hover:text-indigo-600 transition-colors duration-300 mt-1 md:mt-0 md:ml-1">CHANGE PASSWORD</a>
            </div>
            <% if (user.accountType == "advertiser") { %>
                <p class="underline underline-offset-4 title-font sm:text-2xl text-1xl mb-4 font-small text-gray-900">Ads by <%= user.username %></p>
            <% } else { %>
                <p class="underline underline-offset-4 title-font sm:text-2xl text-1xl mb-4 font-small text-gray-900">Ads available to publish on your site</p>
            <% } %>
            <div class="flex flex-wrap">
                <%- include('../partials/ads_partial') %>
            </div>
        </div>
    </div>
</section>
</body>