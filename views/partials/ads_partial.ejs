<% for (let i = 0; i < ads.length; i++) { %>
    <div class="flex flex-col w-full w-1/2 p-6 shadow-md cursor-pointer w-96 hover:-translate-y-1 duration-300">
        <div class="inline relative group h-48">
            <img class="absolute rounded-t object-cover h-full w-full" src="<%= dir %>/ads/<%= ads[i].path%>" alt="Product Preview" />
        </div>
        <div class="flex flex-col bg-white rounded-b p-3">
            <div class="text-sm text-gray-600 font-bold mt-4 mb-1">
                <% if (user.accountType == "advertiser") { %>
                    <a href="/ads/update/<%= ads[i]._id %>" class="m-1 text-lg">Edit</a>
                    <a href="/ads/delete/<%= ads[i]._id %>" class="m-1 text-lg">Delete</a>
                <% } else { %>
                    <a href="get-iframe/<%= ads[i]._id %>" class="m-1 text-lg">Get Iframe</a>
                <% } %>
            </div>
        </div>
    </div>
<% } %>